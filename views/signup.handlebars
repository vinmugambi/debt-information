<div class="container register" style="padding-top: 0; padding-bottom: 2em;">
	<div class="row">
		{{#if errorMessage}}
		<div class="alert alert-danger col-sm-offset-4 col-xs-offset-1 col-xs-10 col-sm-4 text-center">
			<span class="glyphicon glyphicon-exclamation-sign"></span><br/> {{errorMessage}}
		</div>
		{{/if}}
		<div class="login-form col-sm-offset-4 col-xs-offset-1 col-xs-10 col-sm-4 text-center">
			<div class="head">
				<h3>Register a new account</h3>
			</div>
			<form id="register" method="post" action="/signup">
				<div class="form-group" id="username" style="margin-bottom: 0.5em;">
					<label for="role">Role </label>
					<select type="text" name="role" id="role" class="role form-control" required>
						<option disabled selected hidden>Pick The Desired Role</option>
						<option value="role1">Role 1</option>
						<option value="role2">Role 2</option>
					</select>
				</div>
				<div class="form-group" id="firstName" style="margin-bottom: 0.5em;">
					<label for="FirstName">First Name </label>
					<input type="text" class="form-control" placeholder="Enter Your firstName" name="firstName" required/>
				</div>
				<div class="form-group" id="lastName" style="margin-bottom: 0.5em;">
					<label for="lastName">Last Name</label>
					<input type="text" class="form-control" placeholder="Enter Your Other Name" name="lastName" required/>
				</div>
				<div class="form-group" id="phoneNumber" style="margin-bottom: 0.5em;">
					<label for="phoneNumber">Phone Number</label>
					<input type="number" class="form-control" min="0700000000" max="0799999999" minlength="10" maxlength="10" placeholder="Enter Phone Number eg 07XX XXX XXX"
					 name="phoneNumber" required/>
				</div>
				<div class="form-group" id="username" style="margin-bottom: 0.5em;">
					<label for="username">Username </label>
					<input type="text" class="form-control" placeholder="Enter Your Desired Username" name="username" required/>
				</div>
				<div class="form-group" id="password">
					<label for="password">Password </label>
					<input type="password" class="form-control" placeholder="Enter Your Password" name="password" required/>
				</div>
				<div class="form-group" id="confirm">
					<label for="confirm">Confirm Password </label>
					<input type="password" class="form-control" placeholder="Re-Enter Your Password" name="confirm" required/>
				</div>
				<p style="margin-top:2em">Aready have an account <a href="/">login</a></p>
				<div class="submit">
					<button id="login" type="submit" class="btn btn-success btn-block">Register</button>
				</div>
			</form>
		</div>
	</div>
</div>